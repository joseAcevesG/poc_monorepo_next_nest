{
  "root": false,
  "extends": "//",

  "files": {
    "includes": [
      "**",
      "!dist",
      "!**/dist",
      "!coverage",
      "!**/coverage",
      "!node_modules",
      "!**/node_modules"
    ]
  },

  "linter": {
    "domains": {
      "project": "recommended",
      "test": "recommended"
    },
    "rules": {
      "style": {
        "useImportType": "off",
        "useNodejsImportProtocol": "error"
      },
      "suspicious": {
        "noExplicitAny": "error",
        "noImplicitAnyLet": "warn"
      },
      "nursery": {
        "noFloatingPromises": "warn"
      },
      "security": {
        "noGlobalEval": "error"
      },
      "correctness": {
        "noProcessGlobal": "error"
      }
    }
  }
}
