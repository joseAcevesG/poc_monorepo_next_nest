{
  "$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
  "extends": "//",
  "root": false,
  "linter": {
    "rules": {
      "suspicious": {
        "noConsole": "warn"
      },
      "style": {
        "useNamingConvention": {
          "level": "warn",
          "options": {
            "conventions": [
              {
                "selector": {
                  "kind": "classMember",
                  "modifiers": ["private"]
                },
                "match": "_(.+)",
                "formats": ["camelCase"]
              },
              {
                "selector": {
                  "kind": "class"
                },
                "formats": ["PascalCase"]
              }
            ]
          }
        }
      },
      "correctness": {
        "noUnusedImports": "warn"
      }
    }
  },
  "javascript": {
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    }
  },
  "files": {
    "includes": [
      "**/*.ts",
      "**/*.js",
      "!node_modules/**",
      "!dist/**",
      "!coverage/**"
    ]
  }
}
