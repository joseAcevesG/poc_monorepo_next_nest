{
  "root": false,
  "extends": "//",

  "files": {
    "includes": ["!next", "!out", "!build", "!next-env.d.ts", "!node_modules"]
  },

  "linter": {
    "domains": {
      "next": "recommended",
      "react": "recommended",
      "project": "recommended",
      "test": "recommended"
    },
    "rules": {
      "security": {
        "noDangerouslySetInnerHtml": "error",
        "noDangerouslySetInnerHtmlWithChildren": "error"
      },
      "a11y": {
        "useAltText": "error",
        "noSvgWithoutTitle": "warn"
      },
      "suspicious": {
        "noConsole": "error",
        "noDebugger": "error"
      }
    }
  },

  "overrides": [
    {
      "includes": ["**/*.{test,spec}.{ts,tsx,js,jsx}", "**/__tests__/**"],
      "linter": {
        "domains": { "test": "all" },
        "rules": {
          "suspicious": { "noConsole": "off" }
        }
      }
    }
  ]
}
