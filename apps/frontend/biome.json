{
  "$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
  "extends": "//",
  "root": false,
  "linter": {
    "domains": {
      "next": "recommended",
      "react": "recommended"
    },
    "rules": {
      "suspicious": {
        "noConsole": "off"
      },
      "a11y": {
        "useKeyWithClickEvents": "warn",
        "useKeyWithMouseEvents": "warn",
        "noAccessKey": "warn",
        "useAltText": "warn"
      }
    }
  },
  "javascript": {
    "formatter": {
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded"
    }
  },
  "files": {
    "includes": [
      "**/*.ts",
      "**/*.tsx",
      "**/*.js",
      "**/*.jsx",
      "!.next/**",
      "!node_modules/**",
      "!dist/**"
    ]
  }
}
