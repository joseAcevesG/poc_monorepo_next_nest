{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",

  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "main"
  },

  "files": {
    "includes": [
      "**",
      "!dist",
      "!**/dist",
      "!coverage",
      "!**/coverage",
      "!node_modules",
      "!**/node_modules"
    ]
  },

  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },

  "assist": {
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "groups": [
              ":URL:",
              ":PACKAGE_WITH_PROTOCOL:",
              ":NODE:",
              ":PACKAGE:",
              ":ALIAS:",
              ":PATH:"
            ]
          }
        }
      }
    }
  },

  "linter": {
    "enabled": true,
    "domains": {
      "project": "recommended",
      "test": "recommended"
    },
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedImports": "error",
        "noUnusedVariables": "error",
        "noUndeclaredDependencies": "error"
      },
      "suspicious": {
        "noDebugger": "error"
      },
      "security": {
        "noDangerouslySetInnerHtml": "error",
        "noDangerouslySetInnerHtmlWithChildren": "error"
      },
      "nursery": {
        "noImportCycles": "warn",
        "noUnresolvedImports": "error"
      }
    }
  },

  "overrides": [
    {
      "includes": ["packages/**"],
      "linter": {
        "rules": {
          "style": {
            "useImportType": "error",
            "useNodejsImportProtocol": "error"
          },
          "suspicious": { "noConsole": "warn" }
        }
      }
    },

    {
      "includes": ["**/*.{test,spec}.{ts,tsx,js,jsx}", "**/__tests__/**", "e2e/**", "test/**"],
      "linter": {
        "domains": { "test": "recommended" }
      }
    }
  ]
}
