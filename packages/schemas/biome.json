{
  "$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
  "extends": "//",
  "root": false,
  "linter": {
    "rules": {
      "suspicious": {
        "noConsole": "error"
      },
      "correctness": {
        "noUnusedImports": "error",
        "noUnusedVariables": "error"
      },
      "style": {
        "useExportType": "warn",
        "useImportType": "warn",
        "useNamingConvention": {
          "level": "warn",
          "options": {
            "conventions": [
              {
                "selector": {
                  "kind": "variable"
                },
                "formats": ["PascalCase", "camelCase"]
              },
              {
                "selector": {
                  "kind": "typeLike"
                },
                "formats": ["PascalCase"]
              }
            ]
          }
        }
      },
      "complexity": {
        "noExcessiveCognitiveComplexity": "warn"
      }
    }
  },
  "files": {
    "includes": [
      "src/**/*.ts",
      "!node_modules/**",
      "!dist/**",
      "!**/*.test.ts",
      "!**/*.spec.ts"
    ]
  }
}
